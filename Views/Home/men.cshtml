
@{
    ViewBag.Title = "men";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<section class="products">
    <div class="product">
        <img src="~/images/men-02.jpg" alt="Jeans">
        <h3>Jeans</h3>
        <p>Price: $40</p>
        <button class="add-to-cart" onclick="addToCart('Jeans', 40)">Add to Cart</button>
    </div>
    <div class="product">
        <img src="~/images/men-03.jpg" alt="Pants">
        <h3>Pants</h3>
        <p>Price: $60</p>
        <button class="add-to-cart" onclick="addToCart('Pants', 60)">Add to Cart</button>
    </div>
    <div class="product">
        <img src="~/images/men-01.jpg" alt="Jacket Jeans">
        <h3>Jacket Jeans</h3>
        <p>Price: $70</p>
        <button class="add-to-cart" onclick="addToCart('Jacket Jeans', 70)">Add to Cart</button>
    </div>
</section>

<section class="cart">
    <h2>Shopping Cart</h2>
    <table id="cart-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="cart-items">
            <!-- Cart items will be added dynamically here -->
        </tbody>
    </table>
    <p>Total: $<span id="cart-total">0.00</span></p>
    <button onclick="clearCart()">Clear Cart</button>
</section>

<script src="~/js/cart.js"></script>
<script src="~/js/men.js"></script>

