
@{
    ViewBag.Title = "women";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<br>
<section class="products">
    <div class="product">
        <img src="~/images/dress5.jpg" alt="Elegant Dress">
        <h3>Elegant Dress</h3>
        <p>Price: $50</p>
        <button class="add-to-cart" onclick="addToCart('Elegant Dress', 50)">Add to Cart</button>
    </div>

    <div class="product">
        <img src="~/images/dress4.jpg" alt="Dress">
        <h3>Dress</h3>
        <p>Price: $40</p>
        <button class="add-to-cart" onclick="addToCart('Dress', 40)">Add to Cart</button>
    </div>
    <br>
    <div class="product">
        <img src="~/images/mode2.jpg" alt="Dress">
        <h3>jean</h3>
        <p>Price: $40</p>
        <a href="cart.html"><button class="add-to-cart" onclick="addToCart('jean', 40)">Add to Cart</button></a>
    </div>
    <div class="product">
        <img src="~/images/pontalon.jpg" alt="Dress">
        <h3>Pantalon</h3>
        <p>Price: $60</p>
        <button class="add-to-cart" onclick="addToCart('Pantalon', 40)">Add to Cart</button>
    </div>
    <div class="product">
        <img src="~/images/jupe.jpg" alt="Dress">
        <h3>Skirt</h3>
        <p>Price: $70</p>
        <button class="add-to-cart" onclick="addToCart('Skirt', 40)">Add to Cart</button>
    </div>



</section>
<section class="cart">
    <h2>Shopping Cart</h2>
    <table id="cart-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="cart-items">
            <!-- Cart items will be added dynamically here -->
        </tbody>
    </table>
    <p>Total: $<span id="cart-total">0.00</span></p>
    <button onclick="clearCart()">Clear Cart</button>
</section>

<script src="~/js/cart.js"></script>


<script src="~/js/women.js"></script>

